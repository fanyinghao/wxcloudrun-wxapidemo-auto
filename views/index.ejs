    function onClick(elem, url, name) {
      if (url === 'https://') return;
      if (url === playing) {
        if (audio.isInit()) {
          audio.playOrPauseOrResume();
        }
      } else {
        elem.querySelectorAll('.bg')[0].classList.add('voicePlay');
        // window.document.getElementById('contraol-name').innerText = name;
